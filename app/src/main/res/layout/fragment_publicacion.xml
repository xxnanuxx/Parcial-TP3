<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PublicacionFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="583dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline10">

        <EditText
            android:id="@+id/fragPubEditTxtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del perrito" />

        <EditText
            android:id="@+id/fragPubEditTxtEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edad" />

        <AutoCompleteTextView
            android:id="@+id/fragPubAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:hint="De que raza es tu perro..."
            app:layout_constraintStart_toStartOf="@+id/guideline"
            tools:layout_editor_absoluteY="369dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Sexo:" />

        <ToggleButton
            android:id="@+id/fragPubtoggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOn="Macho"
            android:textOff="Hembra"
            android:hint="Sexo"
            />

        <EditText
            android:id="@+id/fragPubEditTxtDuenio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del dueÃ±o" />

        <EditText
            android:id="@+id/fragPubEditTxtPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="peso" />

        <EditText
            android:id="@+id/fragPubEditTxtUrlImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url images" />

        <EditText
            android:id="@+id/fragPubEditTxtDescrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion" />

        <EditText
            android:id="@+id/fragPubEditTxtUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion" />

        <Button
            android:id="@+id/fragPubBtnPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicar" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>